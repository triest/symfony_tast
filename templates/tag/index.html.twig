{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello âœ…</h1>
        <div class="card-header mb-3">Tag Form</div>
        {{ form_start(form) }}
        <div class="form_group">
            <div class="col-md-12 mb-3">
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-btn fa-user"></i> Create article
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    {% for tag in tags %}
        <li>{{ tag.name }}</li>
    {% endfor %}
    </div>
{% endblock %}
